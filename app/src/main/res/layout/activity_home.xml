<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.jokoframework.activity.HomeActivity">

    <LinearLayout
        android:id="@+id/progressHomeWindow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00FFFFFF"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:id="@+id/myProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/myTextProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/myProgress"
            android:layout_alignTop="@id/myProgress"
            android:layout_alignRight="@id/myProgress"
            android:layout_alignBottom="@id/myProgress"
            android:text="@string/loading_web_page"
            android:background="@android:color/transparent" />
    </LinearLayout>

    <fragment
        android:id="@+id/imageFragment"
        android:name="io.github.jokoframework.activity.HomeActivity$MainViewFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/activity_show_info" />

    <fragment
        android:id="@+id/menuFragment"
        android:name="io.github.jokoframework.fragment.NavigationDrawerFragment"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        tools:layout="@layout/fragment_navigation_drawer" />

</android.support.v4.widget.DrawerLayout>